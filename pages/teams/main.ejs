<%- include('../includes/head.ejs') %>
</head>

<body>
  <%- include('../includes/navigation.ejs') %>

  <table class="table">
    <thead class="thead-dark">
      <tr>
        <th scope="col">Name</th>
        <th scope="col">Country</th>
        <th scope="col">Enrolled Players</th>
        <th scope="col"></th>
        <th scope="col"></th>
      </tr>
    </thead>
    <tbody>
      <% if (teams.length > 0) { %>
        <% for (let team of teams) { %>
          <tr>
            <td><%= team.name %></td>
            <td><%= team.country %></td>
            <td><%= team.playersCount %></td>
            <td><a href="/edit-team/<%= team.id %>" class="btn btn-dark">Details</a></td>
            <td><a href="/players/<%= team.id %>" class="btn btn-dark">Players</a></td>
          </tr>
      <% } %>
    </tbody>
  </table>
  <% } else { %>
    <div class="alert alert-danger" role="alert">
      No team was added yet!
    </div>
  <% } %>
<%- include('../includes/end.ejs') %>
